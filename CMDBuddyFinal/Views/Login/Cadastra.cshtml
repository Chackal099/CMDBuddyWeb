@model CMDBuddyFinal.Models.Usuario

@{
    ViewBag.Title = "Cadastra";
}

<br />
<br />
<div style="text-align:center;">
    <h2>Cadastrar usuário</h2>
</div>

<body style="background-color: #b1ccc4;">

    <div class="container col-6">
        @using (Html.BeginForm("SalvarUsuario", "Login", FormMethod.Post))
        {

            @Html.LabelFor(model => model.Username, htmlAttributes: new { @class = "col-12" })
            <br />
            @Html.EditorFor(model => model.Username, new { htmlAttributes = new { @class = "form-control col-12" } })
            <br />
            @Html.LabelFor(model => model.Userpass, htmlAttributes: new { @class = "col-12" })
            <br />
            @Html.PasswordFor(model => model.Userpass, htmlAttributes: new { @class = "form-control col-12" })
            <br />
            @Html.LabelFor(model => model.Email, htmlAttributes: new { @class = "col-12" })
            <br />
            @Html.EditorFor(model => model.Email, new { htmlAttributes = new { @class = "form-control col-12" } })
            <br />
            @Html.LabelFor(model => model.Nome, htmlAttributes: new { @class = "col-12" })
            <br />
            @Html.EditorFor(model => model.Nome, new { htmlAttributes = new { @class = "form-control col-12" } })
            <br />
            <input type="submit" value="Cadastrar" class="btn btn-primary" />
            @Html.ActionLink("Cancelar Cadastro", "Index", "Login", null, new { @class = "btn btn-danger" })
        }
    </div>

    </body>
