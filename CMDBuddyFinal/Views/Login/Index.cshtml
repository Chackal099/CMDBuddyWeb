@model CMDBuddyFinal.Models.Usuario

@{
    ViewBag.Title = "Index";
}
<img src="~/Img/loginimg.png" alt="Imagem de Login" width="400" height="400" class="float-lg-right">
<br />
<body style="background-color: #b1ccc4;">
<h2>Login de Usuarios</h2>

@using (Html.BeginForm("Index", "Painel", FormMethod.Post))
{

    @Html.LabelFor(model => model.Username, htmlAttributes: new { @class = "col-6" })
    <br />
    @Html.EditorFor(model => model.Username, new { htmlAttributes = new { @class = "form-control col-4" } })
    <br />
    @Html.LabelFor(model => model.Userpass, htmlAttributes: new { @class = "col-6" })
    <br />
    @Html.PasswordFor(model => model.Userpass, htmlAttributes: new { @class = "form-control col-4" })
    <br />
    <input type="submit" value="Login" class="btn btn-primary" />
    <br />
    <br />



}

@Html.ActionLink("Cadastre-se!", "Cadastra", "Login", null, null)
<br />
@Html.ActionLink("Esqueceu a Senha?", "Lembra", "Login", null, null)

</body>
